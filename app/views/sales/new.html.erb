<div class="jumbotron ">
<h1 class="text-center mb-3">Ingreso de Ventas</h1>
  <div class="row d-flex justify-content-center">

    <%= form_with model: @sale, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :cod, "Cod", class:"col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :cod, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :Detail, class:"col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :detail, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :Category, class:"col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :category, class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :Value, class:"col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :value, class:"form-control" %>
      </div>
    </div>

    <div class="form-check row">

      <div class="col-2">
        <%= f.check_box :discount, class:"form-check-input" %>
      </div>
      <%= f.label :Discount, class:"col-10 form-check-label" %>
    </div>

    <%= f.submit "Crear", class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
